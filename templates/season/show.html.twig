{% block title %}Season
{% endblock %}

{% block body %}
	<h1>Season</h1>

	<table class="table table-dark table-hover table-borderless">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ season.id }}</td>
			</tr>
			<tr>
				<th>Number</th>
				<td>{{ season.number }}</td>
			</tr>
			<tr>
				<th>Year</th>
				<td>{{ season.year }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ season.description }}</td>
