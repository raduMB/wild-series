{% extends 'base.html.twig' %}

{% block title %}
	Saison
	{{ seasons.number }}
{% endblock %}

{% block body %}

	<div>
		<h1 class="text-center my-1">Série:
			{{ programs.title }}</h1>
		<h2 class="text-center my-3">Liste des épisodes de la saison
			{{ seasons.number }}</h2>
	</div>

	{% for episode in episodes %}
		<div class="card mb-3" style="width: 70rem;">
			<div class="row g-0">
				<div class="col-md-4">
					<img src="{{ asset('build/images/home.jpg') }}" class="img-fluid rounded-start" alt="poster">
				</div>
				<div class="col-md-8">
					<div class="card-body">
						<h4 class="card-title">Title:
							{{ episode.title }}</h4>
						<h5 class="card-text">Episode:
							{{ episode.number }}</h5>
						<p class="card-text">Synopsis:
							{{ episode.synopsis }}</p>
						<p class="card-text">
							<a class="btn btn-warning" href="{{ path('program_episode_show', {'programId': programs.id, 'seasonId': seasons.id, 'episodeId': episode.id}) }}">Voir l'episode</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}

	<div>
		<a href="{{ path('program_index') }}" class="btn btn-info my-1">Retour à la liste des programmes</a>
	</div>

	<div>
		<a href="{{ path('category_index') }}" class="btn btn-info my-1">Retour à la liste des catégories</a>
	</div>

{% endblock %}
