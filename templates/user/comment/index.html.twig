{% extends 'user/base.html.twig' %}

{% block title %}Comment index
{% endblock %}

{% block body %}
    <h1 class="text-center my-3">Comment index</h1>

	<table class="table table-dark table-hover table-borderless">
		<thead class="text-center">
			<tr>
				<th>Id</th>
				<th>Commentaire</th>
				<th>Note</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody class="text-center">
			{% for comment in comments %}
				<tr>
					<td>{{ comment.id }}</td>
					<td>{{ comment.comment }}</td>
					<td>{{ comment.rate  }}</td>
					<td>
						<a href="{{ path('user_comment_show', {'id': comment.id}) }}" class="btn btn-warning my-1 mx-1">Voir</a>
						<a href="{{ path('user_comment_edit', {'id': comment.id}) }}" class="btn btn-secondary my-1 mx-1">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Pas des commentaires trouv√©s</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
