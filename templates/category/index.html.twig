{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Liste avec toutes les catégories disponibles : </h1>
    {% for category in categories %}
        <div>
            <p>{{ loop.index }} / <a href="{{ path('category_show', {'categoryName': category.name}) }}">{{ category.name }}</a></p>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}