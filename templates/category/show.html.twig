{% extends 'base.html.twig' %}

{% block title %}Category
{% endblock %}

{% block body %}
	<h1>Catégorie</h1>

	<table class="table table-dark table-hover table-borderless">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ category.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ category.name }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-secondary my-2 mx-4">Modifier</a>

	{{ include('category/_delete_form.html.twig') }}

	<a href="{{ path('app_category_index') }}" class="btn btn-info my-2 mx-4">Retour à la liste des catégories</a>
{% endblock %}
