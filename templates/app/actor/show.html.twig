{% extends 'app/base.html.twig' %}

{% block title %}
	Fiche acteur
	{{ actor.name }}
{% endblock %}

{% block body %}

	<div class="card mb-3" style="max-width: 540px;">
		<div class="row g-0">
			<div class="col-md-4">
				<img src="{{ vich_uploader_asset(actor) }}" class="img-fluid rounded-start" alt="Card image cap">
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<h5 class="card-title">{{ actor.name }}</h5>
					<p class="card-text">You can see him/her in:</p>
					<div class="card-body">
						{% for program in actor.programs %}
							<a href="{{ path('app_program_show', {'slug': program.slug}) }}" class="btn btn-warning my-1">
								{{ program.title }}</a>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>

	<div>
		<a href="{{ path('app_actor_index') }}" class="btn btn-info my-1">Retour Ã  la liste des acteurs</a>
	</div>

{% endblock %}
