{% extends 'admin/base.html.twig' %}

{% block title %}Episode index
{% endblock %}

{% block body %}
	<h1 class="text-center my-3">Episode index</h1>

	<a href="{{ path('admin_episode_new') }}" class="btn btn-primary my-2 mx-4">Nouveau episode</a>

	<table class="table table-dark table-hover table-borderless">
		<thead class="text-center">
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Number</th>
				<th>Duration</th>
				<th>Synopsis</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody class="text-center">
			{% for episode in episodes %}
				<tr>
					<td>{{ episode.id }}</td>
					<td>{{ episode.title }}</td>
					<td>{{ episode.number }}</td>
					<td>{{ episode.duration }}</td>
					<td>{{ episode.synopsis }}</td>
					<td>
						<a href="{{ path('admin_episode_show', {'slug': episode.slug}) }}" class="btn btn-warning my-1 mx-1">Voir</a>
						<a href="{{ path('admin_episode_edit', {'slug': episode.slug}) }}" class="btn btn-secondary my-1 mx-1">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Pas d'episode trouv√©</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
